<h2 class="mb-4">Files Imported</h2>

<table class="table table-striped table-hover table-bordered align-middle">
  <thead class="table-info">
  <tr>
    <th>ID</th>
    <th>File</th>
    <th>Total Records</th>
    <th>Processed Records</th>
    <th>Not Processed Records</th>
    <th>Status</th>
    <th>Imported At</th>
  </tr>
  </thead>
  <tbody>
    <% @imports.each do |import| %>
      <tr>
        <td><%= import.id %></td>
        <td>
          <% if import.filename.nil? %>
            <span class="text-muted">-</span>
          <% else %>
            <%= link_to import.filename.truncate(20), import.file %>
          <% end %>
        </td>
        <td><%= import.total_records %></td>
        <td><%= import.processed_records %></td>
        <td><%= import.not_processed_records %></td>
        <td class="text-center">
          <%= import.status %>
        </td>
        <td><%= import.created_at.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= render "shared/pagination", collection: @imports %>
