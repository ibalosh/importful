<h2 class="mb-4">Files imported</h2>

<table class="table table-striped table-hover table-bordered align-middle">
  <thead class="table-info">
  <tr>
    <th>ID</th>
    <th>File</th>
    <th>Upload Errors</th>
    <th>Total Records</th>
    <th>Processed Records</th>
    <th>Not Processed Records</th>
    <th>Status</th>
    <th>Imported At</th>
  </tr>
  </thead>
  <tbody>
    <% @imports.each do |import| %>
      <tr>
        <td><%= import.id %></td>
        <td>
          <% if import.filename.nil? %>
            <span class="text-muted">-</span>
          <% else %>
            <%= link_to import.filename.truncate(20), import.file %>
          <% end %>
        </td>
        <td>
          <% if import.import_details.present? %>
            <%= link_to "check error details", import_import_details_path(import) %>
          <% else %>
            <span class="text-muted">-</span>
          <% end %>
        </td>
        <td><%= number_or_dash(import.total_records, import.finished?) %></td>
        <td><%= number_or_dash(import.processed_records, import.finished?) %></td>
        <td><%= number_or_dash(import.not_processed_records, import.finished?) %></td>
        <td class="text-center">
          <%= import_status_badge(import.status) %>
        </td>
        <td><%= import.created_at.strftime("%Y-%m-%d %H:%M") %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @imports, theme: 'bootstrap-5' %>