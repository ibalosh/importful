<h2 class="h3 mb-3">Import error details</h2>

<%= turbo_stream_from [@import, :import_details] %>

<p class="mb-4">
  <strong>Total rows:</strong> <%= @import_details.count %>
</p>

<div class="table-responsive">
  <table class="table table-hover table-bordered align-middle">
    <thead class="table-info">
    <tr>
      <th>Row</th>
      <th>Error Message</th>
      <th>Payload</th>
    </tr>
    </thead>
    <tbody id="import_details">
      <%= render @import_details %>
    </tbody>
  </table>
</div>